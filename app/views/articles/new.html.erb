<h1 align="center">Submit a New Post</h1>
<div class="form">
  <%= form_for([@user, @article], url: articles_path, method: :post) do |f| %>
    <div align="center" class="field">
      <%= f.label :title %>:<br />
      <%= f.text_field :title, autofocus: true, size: "30x1", placeholder: "'Bat Boy Sighted in NYC'" %>
    </div><br />

    <div align="center" class="field">
      <%= f.label :body %>:<br />
      <%= f.text_area :body, autofocus: true, size: "40x10", placeholder: "Insert your body parts here."; %>
    </div><br />

    <div align="center" class="actions">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
</div>
